<h3>Game log</h3>

<div class="game-log">
  <% @game.log.split('Â£').each do |line| %>
    <% if (User.exists?(uuid: cookies[:user_id]))%>
      <% @user = User.find_by uuid: @user_id %>
      <% if (line.include? @user.nickname) %>
        <span class='highlight'><%= line %></span>
      <% else %>
