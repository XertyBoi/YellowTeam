<div class="menu">
<h1>
  Active Games
</h1>

 <%= link_to "Rules" %>

<div>
<ul class="games-list">
  <% @games.each do |game| %>
    <li>
      <%= game.name%> |
      <%= link_to "Join", game_path(game.id)%> |
      <%= link_to "Reset" ,game, method: :patch, data: { confirm: 'Are you sure you want to reset this game?' } %> |
      <%= link_to 'Delete',game, method: :delete, data: { confirm: 'Are you sure you want to remove this game?' } %>
    </li>
  <% end %>
</ul>
</div>

<%= button_to "New Game", new_game_path, method: :get %>
</div>
